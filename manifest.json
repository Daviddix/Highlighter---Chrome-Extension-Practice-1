{
    "manifest_version" : 3,
    "name" : "Highlighter",
    "description" : "Browser highlighting made easy",
    "version" : "0.0.1",
    "action" :{
        "default_popup" : "./src/popup.html" 
    },
    "background":{
        "service_worker":"./src/background.js"
    },
    "permissions" : [
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./src/content.js"],
            "css": ["./src/content.css"]
        }
    ]
}